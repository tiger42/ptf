<?xml version="1.0"?>
<phpunit xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" colors="true" bootstrap="tests/bootstrap.php" backupGlobals="false" stderr="true" xsi:noNamespaceSchemaLocation="https://schema.phpunit.de/9.3/phpunit.xsd">
  <coverage processUncoveredFiles="true">
    <include>
      <directory suffix=".php">*</directory>
    </include>
    <exclude>
      <directory>tests</directory>
      <directory>3rdparty</directory>
      <directory>bin</directory>
      <directory>app_templates</directory>
    </exclude>
  </coverage>
  <testsuites>
    <testsuite name="Ptf">
      <directory>tests/</directory>
    </testsuite>
  </testsuites>
</phpunit>
